        const userTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
        let currentFilter = 'all';

        function updateClocks() {
            const container = document.getElementById('clockContainer');
            const searchTerm = document.getElementById('searchBox').value.toLowerCase();
            let totalCities = 0;
            let visibleCities = 0;

            if (currentFilter === 'all') {
                container.innerHTML = '';
                for (const [region, cityList] of Object.entries(cities)) {
                    const section = document.createElement('div');
                    section.className = 'region-section';
                    section.id = region;
                    
                    const regionNames = {
                        asia: 'ğŸŒ ì•„ì‹œì•„',
                        europe: 'ğŸ‡ªğŸ‡º ìœ ëŸ½',
                        americas: 'ğŸŒ ì•„ë©”ë¦¬ì¹´',
                        africa: 'ğŸŒ ì•„í”„ë¦¬ì¹´',
                        oceania: 'ğŸŒ ì˜¤ì„¸ì•„ë‹ˆì•„'
                    };
                    
                    section.innerHTML = `<h2 class="region-title">${regionNames[region]}</h2><div class="clock-grid" id="grid-${region}"></div>`;
                    container.appendChild(section);
                }
            }

            for (const [region, cityList] of Object.entries(cities)) {
                const grid = document.getElementById(`grid-${region}`);
                if (!grid) continue;
                
                grid.innerHTML = '';

                cityList.forEach(city => {
                    totalCities++;
                    const now = new Date();
                    const isCurrentLocation = city.timezone === userTimezone;
                    
                    const matches = searchTerm === '' || 
                                  city.name.toLowerCase().includes(searchTerm) ||
                                  city.country.toLowerCase().includes(searchTerm);
                    
                    if (!matches) return;
                    visibleCities++;
                    
                    const timeString = now.toLocaleTimeString('ko-KR', {
                        timeZone: city.timezone,
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: false
                    });

                    const dateString = now.toLocaleDateString('ko-KR', {
                        timeZone: city.timezone,
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        weekday: 'short'
                    });

                    const card = document.createElement('div');
                    card.className = `clock-card ${isCurrentLocation ? 'current-location' : ''}`;
                    card.innerHTML = `
                        <div class="city-name">
                            ${city.name}
                            ${isCurrentLocation ? '<span class="current-badge">í˜„ì¬ ìœ„ì¹˜</span>' : ''}
                        </div>
                        <div class="country-name">${city.country}</div>
                        <div class="time-display">${timeString}</div>
                        <div class="date-display">${dateString}</div>
                        <div class="timezone-display">${city.timezone}</div>
                    `;
                    grid.appendChild(card);
                });
            }

            document.getElementById('stats').textContent = 
                `ì´ ${totalCities}ê°œ ë„ì‹œ ì¤‘ ${visibleCities}ê°œ í‘œì‹œ`;
        }

        function filterRegion(region) {
            currentFilter = region;
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            const container = document.getElementById('clockContainer');
            
            if (region === 'all') {
                document.querySelectorAll('.region-section').forEach(section => {
                    section.style.display = 'block';
                });
            } else {
                document.querySelectorAll('.region-section').forEach(section => {
                    section.style.display = section.id === region ? 'block' : 'none';
                });
            }
        }

        document.getElementById('searchBox').addEventListener('input', updateClocks);

        updateClocks();
        setInterval(updateClocks, 1000);
    </script>
</body>
</html>
